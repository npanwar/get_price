<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dell_pc.get_price.activity_add_item">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Category"
                android:id="@+id/textViewselectcat"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="44dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerselectcat"
                android:layout_alignTop="@+id/textViewselectcat"
                android:layout_toRightOf="@+id/textViewselectcat"
                android:layout_toEndOf="@+id/textViewselectcat"
                android:layout_marginLeft="46dp"
                android:layout_marginStart="46dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add category"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="22dp"
                android:id="@+id/textViewaddcat"
                android:layout_below="@+id/spinnerselectcat"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextAddcat"
                android:layout_below="@+id/spinnerselectcat"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of product"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="22dp"
                android:id="@+id/textViewnameofproductcat"
                android:layout_below="@+id/editTextAddcat"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextnameofproductcat"
                android:layout_below="@+id/editTextAddcat"
                android:layout_toRightOf="@+id/textViewnameofproductcat"
                android:layout_toEndOf="@+id/textViewnameofproductcat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="22dp"
                android:id="@+id/textViewpricecat"
                android:layout_below="@+id/editTextnameofproductcat"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextpricecat"
                android:layout_below="@+id/editTextnameofproductcat"
                android:layout_alignRight="@+id/editTextnameofproductcat"
                android:layout_alignEnd="@+id/editTextnameofproductcat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discription"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="22dp"
                android:id="@+id/textViewDiscriptioncat"
                android:layout_below="@+id/editTextpricecat"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ScrollView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/scrollViewDiscriptioncat"
                android:layout_below="@+id/textViewDiscriptioncat"
                android:layout_toRightOf="@+id/textViewaddcat"
                android:layout_toEndOf="@+id/textViewaddcat" >

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="800dp"
                    android:id="@+id/editTextDiscriptioncat" />
            </ScrollView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="submit"

                android:id="@+id/buttonsubmitcat"
                android:layout_below="@+id/scrollViewDiscriptioncat"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

